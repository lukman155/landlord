<div class='card profile-a'>
<section class='profile-section'>

<div>
  <i class="fa-solid fa-user fa-user-own"></i>
  <h2 class='profile-h2'><%= current_user.full_name %></h2>
  <strong><h3 class='profile-h3'>Tenant</h3></strong>

  <h4>Information</h4>
  <p><%= current_user.email %></p>
  <hr>
  <p><%= current_user.phone_number %></p>
  <hr>

  <div>
    <%= link_to "Edit Profile  ",  edit_users_profile_path, class:'n btn btn-outline-primary'%> 
    <%= link_to "View Rentals",  rentals_path, class:'profile-n btn btn-outline-success'%> 
  </div>
</div>

</section>
</div>


<style>

  .profile-section {
    display: flex;
    justify-content: center;
    align-items: center;
    gap:2rem;
    padding:4rem 2rem;
  }

  .profile-h2 {
    font-size:2.5rem;
    margin: 0;

  }

  .profile-h3 {
    font-size: 1rem;
    margin: 0;
    color: #555;
  }

  .profile-a {
    max-width:40rem;
    text-align:center;
    margin: auto;
    margin-top: 5rem;
  }

  .fa-user-own {
    font-size: 6rem;
    margin-bottom: .5rem;
  }

  .profile- n {
    min-width: 115px;
    margin-bottom:1rem;
  }

  @media (min-width: 400){
    
    .fa-user-own {
      font-size: 16rem;
      
    }

  }
</style>