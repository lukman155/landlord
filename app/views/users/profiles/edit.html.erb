
<h1>Edit Profile</h1>

<%= form_for(current_user, url: user_registration_path, method: :put, class: 'form') do |f| %>
  <div class="form-group">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, 'Old password' %>
    <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
  </div>

  <div class="form-group">
  <%= f.label :password, "New Password" %>
  <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirm new password' %>
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
  </div>

  

  <%= f.submit "Update Profile", class: 'btn btn-primary' %>
<% end %>

<%= link_to "Back to Profile", users_profile_path, class: 'btn btn-secondary' %>
