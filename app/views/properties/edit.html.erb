<h1>Editing property</h1>

<%= form_with model: @property do |property_form| %>
  <div class="field">
    <%= property_form.label :property_name %>
    <%= property_form.text_field :property_name %>
  </div>

  <div class="field">
    <%= property_form.label :address %>
    <%= property_form.text_field :address %>
  </div>

  <div class="field">
    <%= property_form.label :rent_amount %>
    <%= property_form.text_field :rent_amount %>
  </div>

  <div class="field">
    <%= property_form.label :property_type %>
    <%= property_form.text_field :property_type %>
  </div>

  <div class="field">
    <%= property_form.label :description %>
    <%= property_form.text_area :description %>
  </div>

  <div class="actions">
    <%= property_form.submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this property", @property %> |
  <%= link_to "Back to properties", properties_path %>
</div>
