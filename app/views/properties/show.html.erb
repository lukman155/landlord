
<% @property.images.each do |image| %>
  <%= image_tag image %>
  
<% end %>


<img class="card-img-top" src="https://www.privateproperty.com.ng/news/wp-content/uploads/2023/05/Difference-Between-a-Mini-Flat-and-Self-Contained.jpeg" alt="Card image cap">
<div class="card-body d-flex flex-column justify-content-between align-items-start">
<h5 class="card-title"><%= @property.property_name %></h5>
<p class="card-text text-muted"><%= @property.address %></p>





<h2>Rooms Types:</h2>
<ul>
  <% if @rooms.any? %>
  <% @rooms_by_type.each do |room| %>
  <li>
    <%= link_to rooms_by_type_property_room_path(@property, room.room_type, room) do %>
      <%= room.room_type %> <br>
      Number of rooms Available: <%= @all_rooms_by_type[room.room_type]&.count || 0 %> <br>
      Rent Amount: <%= room.rent_amount %><br>
    <% end %>
  </li>
<% end %>
  <% else %>
    <li>No roooms yet</li>
  <% end %>
</ul>

<div>

<%= link_to "Edit Rooms", property_rooms_path(@property) %>


  <%= link_to "Edit this property", edit_property_path(@property) %> |
  <%= link_to "Back to properties", properties_path %>

  <%= button_to "Destroy this property", @property, method: :delete %>
</div>

