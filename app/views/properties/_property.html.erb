<div id="<%= dom_id property %>">

<style>
  .b {
    font-size: .85rem;
    font-weight: 300;
    background-color: #eee;
    padding: 2%;
    border-radius: 12%
  }

  .text-close {
    font-size: .8rem;
    padding:0;
    margin:0;
  }

  .text-title {
    font-size: 1.2rem
  }


</style>

<div class="card flex-item" style="width: 18rem; height:26.125rem;">
  <img class="card-img-top" src="https://www.privateproperty.com.ng/news/wp-content/uploads/2023/05/Difference-Between-a-Mini-Flat-and-Self-Contained.jpeg" alt="Card image cap">
  <div class="card-body d-flex flex-column justify-content-between align-items-start">
    <h2 class="card-title text-title"><%= property.property_name %></h2>
    <p class="text-muted text-close"><%= property.full_address %></p>
    <p class="text-muted text-close"><%= render partial: 'distance', locals: { property: property } %></p>
    <p class=" b badge-info"><span class='icon-size'>&#128719; </span><%= property.room_options %> Room Option</p>
    <div class='d-flex'>
      <h5 class="card-title"><span class="text-muted text-close">From</span> &#8358;<%= Integer(property.rent_amount)/1000 %>k/year</h5>
      <%= link_to 'View Property', property, class:'text-white stretched-link' %> 
    </div>
  </div>
</div>

</div>
