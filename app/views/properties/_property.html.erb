<div id="<%= dom_id property %>">

<style>
  .b {
    font-size: .85rem;
    font-weight: 300;
    background-color: #eee;
    padding: 2%;
    border-radius: 12%
  }
</style>

<div class="card m-2 flex-item" style="width: 18rem;">
  <img class="card-img-top" src="https://www.privateproperty.com.ng/news/wp-content/uploads/2023/05/Difference-Between-a-Mini-Flat-and-Self-Contained.jpeg" alt="Card image cap">
  <div class="card-body d-flex flex-column justify-content-between align-items-start">
    <h2 class="card-title"><%= property.property_name %></h2>
    <p class="card-text text-muted"><%= property.address %></p>
    <p class=" b badge-info">&#128719;<%= property.room_options %> Room Option</p>
    <div class='d-flex'>
      <h5 class="card-title"><span class="fs-6 text-muted">From</span> &#8358;<%= Integer(property.rent_amount)/1000 %>k/year</h5>
      <%= link_to 'View Property', property, class:'text-white stretched-link' %> 
    </div>
  </div>
</div>

</div>
