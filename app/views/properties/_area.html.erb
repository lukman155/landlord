<div class="filter-container">
  <%= form_tag(properties_path, method: :get) do %>
    <div class="form-group">
      <%= label_tag :area, "Select Area:" %>
      <%= select_tag :area, options_for_select(@areas.unshift('All'), @selected_area), class: "form-control custom-select" %>
      <%= submit_tag "Filter", class: "btn btn-success area-form" %>
    </div>
  <% end %>
</div>


<style>
  .filter-container{
    margin: 0 0 1rem 0;
  }

  .form-group {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .form-group select.form-control {
    flex: 1;
    margin: 0 10px; /* Add some spacing between dropdown and button */
  }
  .custom-select {
    max-width: 20rem;
  }
  select.custom-select option {
    font-size: 1.5rem;
    padding: 1rem;
  }

  .area-form {

  }
</style>